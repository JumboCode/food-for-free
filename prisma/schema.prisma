generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  clerkId   String   @unique
  email     String   @unique
  role      Role     @default(PARTNER)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  partner   Partner? @relation("UserPartner", fields: [partnerId], references: [id])
  partnerId String?
}

model Partner {
  id                   String   @id @default(cuid())
  organizationName     String
  clerkOrganizationId  String   @unique // links to Clerk Organization
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  users                User[]   @relation("UserPartner")
}

enum Role {
  ADMIN
  PARTNER
}
model UploadedSheet {
  id        String            @id @default(uuid())
  fileName  String
  sheetName String
  createdAt DateTime          @default(now())

  // all inventory records created from this upload
  records   InventoryRecord[]
}

model InventoryRecord {
  id            String   @id @default(uuid())

  product       String
  inventoryType String?
  amount        Int?
  units         String?
  weightLbs     Float?
  source        String?
  destination   String?
  date          DateTime? 

  uploadedSheetId String?        
  uploadedSheet   UploadedSheet? @relation(fields: [uploadedSheetId], references: [id])

  createdAt     DateTime @default(now())
}
