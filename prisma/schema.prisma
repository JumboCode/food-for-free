generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UploadedSheet {
  id        String            @id @default(uuid())
  fileName  String
  sheetName String
  createdAt DateTime          @default(now())

  // all inventory records created from this upload
  records   InventoryRecord[]
}

model InventoryRecord {
  id            String   @id @default(uuid())

  product       String
  inventoryType String?
  amount        Int?
  units         String?
  weightLbs     Float?
  source        String?
  destination   String?
  date          DateTime? 

  uploadedSheetId String?        
  uploadedSheet   UploadedSheet? @relation(fields: [uploadedSheetId], references: [id])

  createdAt     DateTime @default(now())
}
